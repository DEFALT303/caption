{
  "name": "caption",
  "description": "Find the right subtitles. Easy.",
  "author": {
    "name": "Giel Cobben",
    "email": "g.cobben@gmail.com",
    "url": "https://gielcobben.com"
  },
  "productName": "Caption",
  "version": "2.0.0",
  "main": "main/index.js",
  "license": "MIT",
  "repository": "gielcobben/Caption",
  "scripts": {
    "start": "electron --inspect=5858 .",
    "build": "npm run test && next build renderer && next export renderer",
    "dist": "npm run build && build -mlw",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "electron": "latest",
    "electron-builder": "^19.37.2",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^20.0.4",
    "next": "4.1.0",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-test-renderer": "^16.0.0"
  },
  "dependencies": {
    "addic7ed-api": "^1.3.2",
    "app-root-path": "2.0.1",
    "bluebird": "^3.5.1",
    "electron-dl": "^1.10.0",
    "electron-is-dev": "0.3.0",
    "electron-next": "3.1.1",
    "electron-store": "^1.3.0",
    "electron-window-state": "^4.1.1",
    "lodash": "^4.17.4",
    "next-redux-wrapper": "^1.3.4",
    "opensubtitles-api": "latest",
    "react-dropzone": "^4.1.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0"
  },
  "build": {
    "files": [
      "**/*",
      "!renderer",
      "renderer/out"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./renderer/static/icon.icns"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "icon": "./renderer/static/icon.iconset/"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./renderer/static/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "gielcobben",
        "repo": "Caption"
      }
    ]
  }
}
